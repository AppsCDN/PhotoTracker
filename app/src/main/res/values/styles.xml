<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <!-- No title window theme. -->
    <style name="NoTitleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="NoTitleThemeSettings" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="preferenceTheme">@style/SettingsTheme.PreferenceThemeOverlay</item>
    </style>
    <style name="SettingsTheme.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">#000000</item>
        <item name="colorControlNormal">#000000</item>
        <item name="android:background">#90ddf5</item>
    </style>
    <style name="ActionBarWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="android:background">#70d2ea</item>
    </style>
</resources>
