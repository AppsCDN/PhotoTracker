<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="@string/setting_group_general">
        <SwitchPreference
            android:defaultValue="@bool/map_perfromance_default"
            android:title="@string/setting_map_performance_switch"
            android:maxLines="3"
            android:key="map_performance_switch"
            android:summary="@string/setting_map_performance_hint" />
        <SwitchPreference
            android:defaultValue="@bool/map_smooth_track_default"
            android:title="@string/setting_map_smooth_track_switch"
            android:maxLines="3"
            android:key="map_smooth_track_switch"
            android:summary="@string/setting_map_smooth_track_hint" />
        <SwitchPreference
            android:defaultValue="@bool/flickr_photos_default"
            android:title="@string/setting_flickr_photos_switch"
            android:maxLines="3"
            android:key="flickr_switch"
            android:summary="@string/setting_flickr_photos_hint" />
        <SeekBarPreference
            android:min="@integer/flickr_photos_percent_default"
            android:max="@integer/flickr_photos_percent_max"
            android:defaultValue="@integer/flickr_photos_percent_default"
            android:icon="@mipmap/ic_flickr"
            app:showSeekBarValue="false"
            android:title="@string/setting_flickr_photos_percent"
            android:key="flickr_photos_percent"
            android:summary="@string/setting_flickr_photos_percent_hint" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/setting_group_account">
        <Preference
            android:key="runkeeper_access_token"
            android:title="@string/setting_runkeeper"
            android:summary="@string/setting_runkeeper_hint"
            android:icon="@mipmap/ic_runkeeper"
            ></Preference>
    </PreferenceCategory>
</PreferenceScreen>