<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StartScreenActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/track_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ActionBarWhite"
        android:transitionName="actionBar" />
    <!--android:background="#90ddf5" light blue-->
    <fragment
        android:id="@+id/google_map_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/track_toolbar"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>
    <Button
        android:id="@+id/track_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tooltipText="@string/track_start_tooltip"
        android:text="@string/action_start"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/md_white_1000"
        android:background="@drawable/button_border_start"
        android:layout_alignParentBottom="true"
        android:layout_margin="7dp"/>
    <Button
        android:id="@+id/track_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tooltipText="@string/track_continue_tooltip"
        android:text="@string/action_resume"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/md_white_1000"
        android:background="@drawable/button_border_start"
        android:layout_above="@+id/track_start"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        />
    <ProgressBar
        android:id="@+id/loading_progressbar"
        android:layout_marginLeft="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/track_continue"
        style="?android:attr/progressBarStyleSmall"
        />
</RelativeLayout>